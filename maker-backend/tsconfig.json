{
  "compilerOptions": {
    "charset": "utf8",
    "baseUrl": ".",
    "lib": ["esnext"],
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "resolveJsonModule": true, // Allow import json file
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true, // sequelize
    "emitDecoratorMetadata": true, // sequelize
    "locale": "ko", // Error message korean
    "pretty": true // Error message pretty
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
